generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Weather {
  id       Int    @id @default(autoincrement())
  sol      String @unique
  temp_min Float?
  temp_max Float?
  temp_avg Float?

  wind_min Float?
  wind_max Float?
  wind_avg Float?

  pressure_min Float?
  pressure_max Float?
  pressure_avg Float?

  firstUTC DateTime?
  lastUTC  DateTime?

  season          String?
  month_ordinal   Int?
  northern_season String?
  southern_season String?

  createdAt DateTime @default(now())
}
